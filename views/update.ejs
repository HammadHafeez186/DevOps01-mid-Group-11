<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DevOps Articles - Edit</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="/css/app.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark app-navbar sticky-top">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="/articles">
        <i class="fas fa-feather-alt me-2"></i>
        DevOps Articles
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#primaryNav" aria-controls="primaryNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="primaryNav">
        <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
          <li class="nav-item">
            <a class="nav-link" href="/articles">
              <i class="fas fa-compass me-1"></i>
              Explore
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/articles/mine">
              <i class="fas fa-bookmark me-1"></i>
              My Articles
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/articles/update/<%= article.id %>">
              <i class="fas fa-pen me-1"></i>
              Edit
            </a>
          </li>
        </ul>
        <% if (currentUser) { %>
          <div class="d-flex align-items-center gap-3 ms-lg-4 mt-3 mt-lg-0">
            <span class="text-white-50">
              <i class="fas fa-user-circle me-1"></i>
              <%= currentUser.email %>
            </span>
            <form method="POST" action="/auth/logout" class="m-0">
              <button type="submit" class="btn btn-outline-light btn-sm rounded-pill">
                <i class="fas fa-sign-out-alt me-1"></i>
                Sign out
              </button>
            </form>
          </div>
        <% } %>
      </div>
    </div>
  </nav>

  <main class="app-shell">
    <div class="container">
      <%- include('partials/flash') %>

      <section class="hero-banner mb-5">
        <h1 class="fw-bold mb-2 d-flex align-items-center gap-3">
          <i class="fas fa-pencil-ruler text-warning"></i>
          Refine "<%= article.title || 'Untitled Article' %>"
        </h1>
        <p class="text-muted mb-0">
          Update the narrative, attach fresh resources, and decide whether this work stays private or goes live.
        </p>
      </section>

      <% const mediaItems = Array.isArray(article.media) ? article.media : [] %>
      <% const imageMedia = mediaItems.filter(item => item.type === 'image') %>
      <% const documentMedia = mediaItems.filter(item => item.type === 'document') %>
      <% const videoMedia = mediaItems.filter(item => item.type === 'video') %>

      <section class="form-wrapper">
        <form id="articleForm" method="POST" action="/articles/<%= article.id %>?_method=PUT" enctype="multipart/form-data">
          <div class="row g-4">
            <div class="col-lg-8">
              <div class="mb-4">
                <label for="title" class="form-label">
                  <i class="fas fa-heading me-2 text-primary"></i>
                  Headline
                </label>
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="title"
                  value="<%= article.title || '' %>"
                  required
                >
              </div>

              <div class="mb-4">
                <label class="form-label">
                  <i class="fas fa-align-left me-2 text-primary"></i>
                  Body
                </label>
                <div class="d-flex justify-content-end mb-2">
                  <button type="button" class="btn btn-outline-pill btn-sm" onclick="togglePreview()">
                    <span id="previewText">Show preview</span>
                    <i class="fas fa-eye ms-1"></i>
                  </button>
                </div>
                <div id="editor" style="height: 360px;"><%- article.body || '' %></div>
                <input type="hidden" name="body" id="body">
              </div>

              <div id="articlePreview" class="app-card mt-4" style="display: none;">
                <div class="app-card-header">
                  <h2 class="h4 mb-0" id="previewTitle">Article Preview</h2>
                </div>
                <div class="app-card-body">
                  <div id="previewBody" class="article-content"></div>
                </div>
              </div>
            </div>

            <div class="col-lg-4">
              <div class="mb-4">
                <label for="images" class="form-label d-flex justify-content-between align-items-center">
                  <span>
                    <i class="fas fa-images me-2 text-secondary"></i>
                    Add images
                  </span>
                  <span class="badge-soft bg-primary-subtle text-primary">PNG, JPG, GIF</span>
                </label>
                <input
                  class="form-control"
                  type="file"
                  id="images"
                  name="images"
                  accept="image/*"
                  multiple
                >
                <div class="form-text">
                  Attach new visuals to replace or expand your gallery.
                </div>
              </div>

              <div class="mb-4">
                <label for="documents" class="form-label d-flex justify-content-between align-items-center">
                  <span>
                    <i class="fas fa-file-alt me-2 text-secondary"></i>
                    Add documents
                  </span>
                  <span class="badge-soft bg-secondary-subtle text-secondary">PDF, DOCX</span>
                </label>
                <input
                  class="form-control"
                  type="file"
                  id="documents"
                  name="documents"
                  accept=".pdf,.doc,.docx,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"
                  multiple
                >
                <div class="form-text">
                  Upload updated reference files (max 5 per save).
                </div>
              </div>

              <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center">
                  <label class="form-label mb-0">
                    <i class="fas fa-link me-2 text-secondary"></i>
                    Video embeds
                  </label>
                  <button type="button" class="btn btn-outline-pill btn-sm" id="addVideoLinkBtn">
                    <i class="fas fa-plus me-1"></i>
                    Add link
                  </button>
                </div>
                <div id="videoLinksContainer" class="d-flex flex-column gap-2 mt-2">
                  <% if (videoMedia.length > 0) { %>
                    <% videoMedia.forEach(video => { %>
                      <input
                        type="url"
                        name="videoLinks"
                        class="form-control"
                        value="<%= video.externalUrl || '' %>"
                        placeholder="https://youtu.be/..."
                      >
                    <% }) %>
                  <% } else { %>
                    <input
                      type="url"
                      name="videoLinks"
                      class="form-control"
                      placeholder="https://youtu.be/..."
                    >
                  <% } %>
                </div>
                <div class="form-text">
                  Existing video embeds are replaced by the links provided here.
                </div>
              </div>

              <div class="mb-4">
                <label class="form-label">
                  <i class="fas fa-eye me-2 text-primary"></i>
                  Visibility
                </label>
                <div class="alert-soft p-3">
                  Decide whether this article remains private or appears on the public feed.
                </div>
                <div class="form-check mb-2">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="visibility"
                    id="visibilityPrivate"
                    value="private"
                    <%= article.visibility === 'private' ? 'checked' : '' %>
                  >
                  <label class="form-check-label" for="visibilityPrivate">
                    <i class="fas fa-lock me-1 text-secondary"></i>
                    Private workspace
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="visibility"
                    id="visibilityPublic"
                    value="public"
                    <%= article.visibility === 'public' ? 'checked' : '' %>
                  >
                  <label class="form-check-label" for="visibilityPublic">
                    <i class="fas fa-globe me-1 text-success"></i>
                    Public showcase
                  </label>
                </div>
              </div>

              <div class="mb-4">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="approved"
                    id="approved"
                    value="true"
                    <%= article.approved ? 'checked' : '' %>
                  >
                  <label class="form-check-label" for="approved">
                    <strong>Mark as published</strong>
                    <span class="d-block text-muted small">Skip pending review and surface this article immediately.</span>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <% if (imageMedia.length > 0) { %>
            <section class="mt-5">
              <h2 class="h5 fw-bold mb-3 d-flex align-items-center gap-2">
                <i class="fas fa-photo-film text-secondary"></i>
                Existing images
              </h2>
              <div class="row g-3">
                <% imageMedia.forEach(image => { %>
                  <div class="col-sm-6 col-lg-4">
                    <div class="media-card">
                      <img src="/<%= image.storagePath %>" alt="<%= image.title || 'Article image' %>" style="height: 180px; object-fit: cover;">
                      <div class="form-check mt-2">
                        <input class="form-check-input" type="checkbox" name="removeMedia" id="remove-image-<%= image.id %>" value="<%= image.id %>">
                        <label class="form-check-label small text-muted" for="remove-image-<%= image.id %>">
                          Remove this image on save
                        </label>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            </section>
          <% } %>

          <% if (documentMedia.length > 0) { %>
            <section class="document-section mt-5">
              <div class="section-heading">
                <div>
                  <h2 class="h5 fw-bold mb-2 d-flex align-items-center gap-2">
                    <i class="fas fa-file-alt text-primary"></i>
                    Existing documents
                  </h2>
                  <p class="text-muted">Download to review and tick remove to drop them from the article.</p>
                </div>
              </div>
              <div class="row g-4">
                <% documentMedia.forEach(doc => { %>
                  <div class="col-12 col-xl-6">
                    <div class="document-card h-100">
                      <div class="document-card-header w-100">
                        <div class="document-icon" style="background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);">
                          <i class="fas fa-file-lines"></i>
                        </div>
                        <div class="flex-grow-1">
                          <h3 class="h6 mb-1"><%= doc.title || 'Document' %></h3>
                          <div class="document-meta">
                            <span class="document-type-chip bg-primary-subtle text-primary">
                              <%= (doc.title && doc.title.includes('.')) ? doc.title.split('.').pop().toUpperCase() : 'FILE' %>
                            </span>
                            <span>
                              <i class="fas fa-calendar-alt me-1"></i>
                              Uploaded <%= new Date(doc.createdAt).toLocaleString() %>
                            </span>
                          </div>
                        </div>
                        <div class="document-actions">
                          <a href="/<%= doc.storagePath %>" class="btn btn-outline-pill btn-sm" target="_blank" rel="noopener">
                            <i class="fas fa-download"></i>
                            Open
                          </a>
                        </div>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="removeMedia" id="remove-doc-<%= doc.id %>" value="<%= doc.id %>">
                        <label class="form-check-label small text-muted" for="remove-doc-<%= doc.id %>">
                          Remove this document on save
                        </label>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            </section>
          <% } %>

          <div class="d-flex justify-content-between flex-wrap gap-3 pt-4 border-top mt-5">
            <div class="d-flex flex-wrap gap-2">
              <a href="/articles/<%= article.id %>" class="btn btn-outline-pill">
                <i class="fas fa-eye"></i>
                View article
              </a>
              <a href="/articles" class="btn btn-outline-pill">
                <i class="fas fa-arrow-left"></i>
                Back to list
              </a>
            </div>
            <div class="d-flex flex-wrap gap-2">
              <button type="submit" class="btn btn-warning-pill btn-pill">
                <i class="fas fa-save"></i>
                Update article
              </button>
              <button type="button" class="btn btn-danger-pill btn-pill" onclick="deleteArticle()">
                <i class="fas fa-trash"></i>
                Delete
              </button>
            </div>
          </div>
        </form>
      </section>
    </div>
  </main>

  <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Delete article
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Deleting this article will also remove its media. This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <form method="POST" action="/articles/<%= article.id %>?_method=DELETE" class="m-0">
            <button type="submit" class="btn btn-danger-pill btn-pill">
              <i class="fas fa-trash"></i>
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
  <script>
    const quill = new Quill('#editor', {
      theme: 'snow',
      placeholder: 'Refresh your article content here...',
      modules: {
        toolbar: [
          [{ header: [1, 2, 3, false] }],
          ['bold', 'italic', 'underline', 'strike'],
          [{ list: 'ordered' }, { list: 'bullet' }],
          ['blockquote', 'code-block'],
          ['link', 'image', 'video'],
          ['clean']
        ]
      }
    })

    const hiddenBodyInput = document.getElementById('body')
    const titleInput = document.getElementById('title')

    function renderPreview() {
      document.getElementById('previewTitle').textContent = titleInput.value || 'Article preview'
      document.getElementById('previewBody').innerHTML = quill.root.innerHTML || '<p class="text-muted">Content preview will appear here.</p>'
    }

    titleInput.addEventListener('input', renderPreview)
    quill.on('text-change', renderPreview)
    renderPreview()

    window.togglePreview = function togglePreview() {
      const preview = document.getElementById('articlePreview')
      const text = document.getElementById('previewText')
      const isHidden = preview.style.display === 'none'
      preview.style.display = isHidden ? 'block' : 'none'
      text.textContent = isHidden ? 'Hide preview' : 'Show preview'
    }

    window.deleteArticle = function deleteArticle() {
      const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'))
      deleteModal.show()
    }

    const addVideoLinkBtn = document.getElementById('addVideoLinkBtn')
    const videoLinksContainer = document.getElementById('videoLinksContainer')

    addVideoLinkBtn.addEventListener('click', () => {
      const input = document.createElement('input')
      input.type = 'url'
      input.name = 'videoLinks'
      input.className = 'form-control'
      input.placeholder = 'https://youtu.be/...'
      videoLinksContainer.appendChild(input)
    })

    document.getElementById('articleForm').addEventListener('submit', function() {
      hiddenBodyInput.value = quill.root.innerHTML

      const submitBtn = this.querySelector('button[type="submit"]')
      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Updating...'
      submitBtn.disabled = true
    })
  </script>
</body>
</html>
