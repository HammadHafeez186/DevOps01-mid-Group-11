<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaints Management - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/app.css">
    <style>
        .admin-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem 0;
            margin-bottom: 2rem;
        }
        .complaint-status {
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 500;
        }
        .status-pending {
            background: #fff3cd;
            color: #856404;
        }
        .status-resolved {
            background: #d4edda;
            color: #155724;
        }
        .complaint-card {
            border-left: 4px solid #dee2e6;
            transition: all 0.3s ease;
        }
        .complaint-card.pending {
            border-left-color: #ffc107;
        }
        .complaint-card.resolved {
            border-left-color: #28a745;
        }
    </style>
</head>
<body>
    <div class="admin-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-3"></i>
                        Complaints Management
                    </h1>
                    <p class="mb-0 mt-2">Handle user reports and complaints</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="/admin" class="btn btn-light btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>
                        Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <%- include('../partials/flash') %>

        <!-- Filters -->
        <div class="row mb-4">
            <div class="col-md-6">
                <form method="GET" class="d-flex">
                    <select name="status" class="form-select me-2">
                        <option value="pending" <%= status === 'pending' ? 'selected' : '' %>>Pending Complaints</option>
                        <option value="resolved" <%= status === 'resolved' ? 'selected' : '' %>>Resolved Complaints</option>
                        <option value="all" <%= status === 'all' ? 'selected' : '' %>>All Complaints</option>
                    </select>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </form>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="text-muted">
                    Total Complaints: <strong><%= totalComplaints %></strong>
                </div>
            </div>
        </div>

        <!-- Complaints List -->
        <% if (complaints.length > 0) { %>
            <div class="row">
                <% complaints.forEach(complaint => { %>
                    <div class="col-12 mb-4">
                        <div class="card complaint-card <%= complaint.status %>">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">
                                        <i class="fas fa-flag me-2"></i>
                                        Complaint #<%= complaint.id %> - <%= complaint.reason %>
                                    </h6>
                                    <small class="text-muted">
                                        Reported by: <%= complaint.reporter ? complaint.reporter.email : 'Anonymous' %>
                                    </small>
                                </div>
                                <div>
                                    <% if (complaint.status === 'pending') { %>
                                        <span class="complaint-status status-pending">
                                            <i class="fas fa-clock me-1"></i>
                                            Pending
                                        </span>
                                    <% } else { %>
                                        <span class="complaint-status status-resolved">
                                            <i class="fas fa-check-circle me-1"></i>
                                            Resolved
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h6>Description:</h6>
                                        <p class="mb-3"><%= complaint.description %></p>
                                        
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <small class="text-muted">
                                                    <strong>Target Type:</strong> <%= complaint.targetType %>
                                                </small>
                                            </div>
                                            <div class="col-sm-6">
                                                <small class="text-muted">
                                                    <strong>Target ID:</strong> <%= complaint.targetId %>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="bg-light p-3 rounded">
                                            <h6 class="mb-2">Details</h6>
                                            <small class="d-block mb-1">
                                                <strong>Reported:</strong> <%= new Date(complaint.createdAt).toLocaleDateString() %>
                                            </small>
                                            <% if (complaint.status === 'resolved' && complaint.resolver) { %>
                                                <small class="d-block mb-1">
                                                    <strong>Resolved by:</strong> <%= complaint.resolver.email %>
                                                </small>
                                                <small class="d-block">
                                                    <strong>Resolved on:</strong> <%= new Date(complaint.resolvedAt).toLocaleDateString() %>
                                                </small>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                
                                <% if (complaint.status === 'pending') { %>
                                    <div class="mt-3 d-flex gap-2">
                                        <% if (complaint.targetType === 'user' || complaint.targetType === 'User') { %>
                                            <a href="/admin/users" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-user me-1"></i>
                                                View User
                                            </a>
                                        <% } else if (complaint.targetType === 'article' || complaint.targetType === 'Article') { %>
                                            <a href="/articles/<%= complaint.targetId %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-external-link-alt me-1"></i>
                                                View Article
                                            </a>
                                        <% } %>
                                        
                                        <form method="POST" action="/admin/complaints/<%= complaint.id %>/resolve" class="d-inline">
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-check me-1"></i>
                                                Mark as Resolved
                                            </button>
                                        </form>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>&status=<%= status %>">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                        <% } %>

                        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>&status=<%= status %>"><%= i %></a>
                            </li>
                        <% } %>

                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage + 1 %>&status=<%= status %>">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } else { %>
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No complaints found</h5>
                    <p class="text-muted">There are no complaints matching your criteria.</p>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>