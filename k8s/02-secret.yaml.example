apiVersion: v1
kind: Secret
metadata:
  name: app-secret
  namespace: devops-articles
  labels:
    app: devops-articles
type: Opaque
stringData:
  # Copy this file to 02-secret.yaml and replace all placeholders
  # DO NOT commit 02-secret.yaml with real secrets
  DB_PASSWORD: "REPLACE_WITH_YOUR_DB_PASSWORD"
  RESEND_API_KEY: "REPLACE_WITH_YOUR_RESEND_API_KEY"
  SESSION_SECRET: "REPLACE_WITH_YOUR_SESSION_SECRET"
  # For local minikube: postgresql://postgres:YOUR_PASSWORD@postgres-service:5432/devops_db
  # For AWS RDS: postgresql://postgres:YOUR_PASSWORD@YOUR_RDS_ENDPOINT:5432/devops_db?sslmode=require
  DATABASE_URL: "postgresql://postgres:REPLACE_WITH_YOUR_DB_PASSWORD@REPLACE_WITH_DB_HOST:5432/devops_db"
